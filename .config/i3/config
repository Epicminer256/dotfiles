set $mod Mod4
font pango:monospace 9
set $primarycolor #f00000
set $backgroundcolor #888888

client.focused $primarycolor $primarycolor $primarycolor $primarycolor $primarycolor

# These apps spawn in their workspaces automatically
# Use `xprop | grep WM_CLASS` to get app class
assign [class="Lutris"] $ws4
assign [class="steam"] $ws4
assign [class="easyeffects"] $ws10
assign [class="YouTube Music"] $ws6
assign [class="discord"] $ws5
# -----------------------------------------------

# No Titlebars
default_border pixel 1
default_floating_border pixel 1


# Gaps
gaps inner 2
gaps outer 2

floating_modifier $mod
tiling_drag modifier titlebar

# exec --no-startup-id polybar
exec --no-startup-id nitrogen --restore
exec --no-startup-id picom
exec --no-startup-id pa-applet
exec --no-startup-id nm-applet

# App keys
bindsym $mod+b exec librewolf
bindsym $mod+space exec "rofi -show drun"

# Media keys
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Brightness (Supports meta, control, and shift keys for fine tuning)
bindsym XF86MonBrightnessDown exec brightnessctl s 10%-
bindsym XF86MonBrightnessUp exec brightnessctl s +10%
bindsym Shift+XF86MonBrightnessDown exec brightnessctl s 100-
bindsym Shift+XF86MonBrightnessUp exec brightnessctl s +100
bindsym Control+XF86MonBrightnessDown exec brightnessctl s 10-
bindsym Control+XF86MonBrightnessUp exec brightnessctl s +10

# Shutdown and sleep keys
bindsym $mod+Escape exec systemctl suspend
bindsym $mod+Shift+p exec shutdown now
bindsym $mod+Shift+q exec i3-msg exit
bindsym $mod+z restart

bindsym $mod+g focus mode_toggle
bindsym $mod+u split h
bindsym $mod+i split v

bindsym $mod+Shift+f floating toggle
bindsym $mod+w layout toggle split
bindsym $mod+e layout tabbed

bindsym $mod+Left resize shrink width 10 px or 10 ppt
bindsym $mod+Down resize grow height 10 px or 10 ppt
bindsym $mod+Up resize shrink height 10 px or 10 ppt
bindsym $mod+Right resize grow width 10 px or 10 ppt

bindsym $mod+q kill
bindsym $mod+p kill

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Return exec $TERMINAL

bindsym $mod+f fullscreen toggle

bindsym $mod+m focus parent
bindsym $mod+n focus child

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

set $ws1 "1.Main1"
set $ws2 "2.Main2"
set $ws3 "3.Main3"
set $ws4 "4.Game"
set $ws5 "5.Messaging"
set $ws6 "6.Music"
set $ws7 "7."
set $ws8 "8."
set $ws9 "9."
set $ws10 "10.Background apps"

bar {
	colors {
		focused_workspace #220000 #880000 #ffffffa
	}
	status_command i3status
}
